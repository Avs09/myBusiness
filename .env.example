# ==============================
# Variables de entorno para Docker Compose y la aplicación
# Copia este archivo a .env y ajusta valores locales si hace falta
# ==============================

# --- PostgreSQL contenedor ---
POSTGRES_DB=myBusiness
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Babaluarara123

# Puerto en el host para exponer Postgres del contenedor.
# Si tu Postgres local usa 5432, elige otro libre, p.ej. 5433.
DB_PORT=5433

# --- Spring Boot (backend) ---
SPRING_PROFILES_ACTIVE=dev
# URL JDBC apuntando al servicio 'db' en Docker Compose:
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/${POSTGRES_DB}
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}
# Opcional: abrir JPA open-in-view si lo deseas
SPRING_JPA_OPEN_IN_VIEW=false

# --- Frontend (Vite) ---
# En desarrollo con Vite local, podrías usar: http://host.docker.internal:8080
# En producción con Docker Compose, se deja vacío para rutas relativas:
VITE_API_URL=

# --- Mail ---
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=${MAIL_USER}
MAIL_PASSWORD=${MAIL_PASSWORD}

# (Otros secretos o configuraciones si tu app los usa)
